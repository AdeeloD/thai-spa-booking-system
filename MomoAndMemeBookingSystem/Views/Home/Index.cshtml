@{
    ViewData["Title"] = "Welcome to Momo & Meme";
}

<div class="container text-center my-5">
    <h1 class="display-4 text-success">Welcome to Momo & Meme</h1>
    <p class="lead">Experience the ancient art of Thai massage with a modern touch. Relax, rejuvenate, and restore your well-being.</p>
    <img src="~/images/panda.png" alt="Panda Relaxing" class="img-fluid my-4" style="max-width: 200px;" />
    <div class="mt-4">
        <a class="btn btn-success btn-lg" asp-controller="Bookings" asp-action="Create">Book Your Massage Now</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-spa fa-3x text-success mb-3"></i>
                <h5 class="card-title">Traditional Thai Massage</h5>
                <p class="card-text">Experience the ancient art of Thai massage for ultimate relaxation.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-leaf fa-3x text-success mb-3"></i>
                <h5 class="card-title">Aromatherapy</h5>
                <p class="card-text">Let the soothing scents of essential oils calm your mind and body.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-heart fa-3x text-success mb-3"></i>
                <h5 class="card-title">Wellness Packages</h5>
                <p class="card-text">Choose from our carefully curated wellness packages for the ultimate treat.</p>
            </div>
        </div>
    </div>
</div>
