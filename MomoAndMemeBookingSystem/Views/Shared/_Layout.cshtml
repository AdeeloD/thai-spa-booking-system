<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Momo & Meme - Thai Massage</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Custom Styles -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #556b2f;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/panda.png" alt="Panda Logo" style="width: 50px; height: auto; margin-right: 10px;" />
                    Momo & Meme
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MassageTypes" asp-action="Index"><i class="fas fa-spa"></i> Massage Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Masseurs" asp-action="Index"><i class="fas fa-user-friends"></i> Masseurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bookings" asp-action="Index"><i class="fas fa-calendar-alt"></i> Bookings</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-4" style="background-color: #556b2f; color: white; padding: 15px;">
        <div class="container text-center">
            <span>&copy; 2025 Momo & Meme - All Rights Reserved.</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white ms-2">Privacy</a>
            <div class="mt-2">
                <i class="fas fa-phone me-2"></i> Contact: +36 123 456 789
                <i class="fas fa-envelope ms-3 me-2"></i> Email: info@momoandmeme.com
            </div>
        </div>
    </footer>

    <!-- Bootstrap and custom scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
